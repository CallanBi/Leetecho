{
  "extends": "../../paths.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "noErrorTruncation": true,
    "types": [
      "vite/client",
      "vite-plugin-svgr/client",
      "@emotion/react/types/css-prop",
      "@emotion/core",
    ],
  },
  "include": [
    "./src",
    "./src/types/*.d.ts",
    "./src/types/**/*.d.ts",
    "types/*.d.ts",
    "types/**/*.d.ts",
    "**/types/**/*.d.ts",
    "../const/store/**/*.d.ts",
    "../main/router/**/*.d.ts",
    "../main/idl/**/*.d.ts",
    "../main/middleware/**/*.d.ts",
  ]
}